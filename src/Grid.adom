const letters = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j']

tag Grid [
  css [
    background '#ccc'
    width '100%'

    'sb-grid-column' [
      display 'flex'
      width '1vw'
    ]

    'mwc-button' [
      // --mdc-theme-primary '#666' <- does not work
    ]
  ]

  sb-grid [
    each (letter, i in letters) [
      sb-grid-column [
        each (x, i in letters) [
          mwc-button icon='check'
        ]
      ]
    ]
  ]
]

export Grid
